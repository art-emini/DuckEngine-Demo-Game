{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"removeComments": false,
		"noImplicitAny": true,
		"outDir": "dist",
		"strict": true,
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
